<%= simple_form_for(payment, defaults: { wrapper_html: { class: 'form-group' }, input_html: { class: 'form-control' } }, html: {multipart: true }) do |f| %>
  <%= f.input :amount %>
  <%= f.input :date_paid %>
  <%= f.input :document %>
  <%= f.association :client %>
  <hr>
  <%= f.submit "Save Payment" %>
<% end %>
