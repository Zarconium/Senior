<div class="col-md-offset-4 col-md-4">
<h2>Sign in</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), defaults: { wrapper_html: { class: 'form-group' }, input_html: { class: 'form-control' } }) do |f| %>
    <%= f.input :email, :required => false, :autofocus => true %>
    <%= f.input :password, :required => false %>
    <%= f.input :remember_me, input_html: { class: "checkbox" }, :as => :boolean if devise_mapping.rememberable? %>

    <%= f.button :submit, "Sign in", class: "btn btn-primary" %>
<% end %>

<%= render "devise/shared/links" %>
</div>