<div class="page-header">
	<h2>Search Report Cards</h2>
</div>

<%= form_tag search_reportcard_path, :method => 'get', class: "form-horizontal", role: "form" do %>
<div class="input-group">
<%= text_field_tag :input, nil, class: "form-control" %>
<span class="input-group-btn">
<%= button_tag "Search", type: "submit", class: "btn btn-default" %>
</span>
</div>
<% end %>