<div class="col-xs-offset-4 col-xs-4 img-rounded" style="background:#fff;padding:30px;">
	<div class="row">
		<div class="page-header">
			<h1>Forgot your password?</h1>
		</div>

		<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }, defaults: { wrapper_html: { class: 'form-group' }, input_html: { class: 'form-control' } }) do |f| %>
			<%= f.error_notification %>

			<div class="form-inputs">
				<%= f.input :email, :required => true, :autofocus => true, error_html: { class: 'text-danger'} %>
			</div>

			<div class="form-actions">
				<%= f.button :submit, "Send me reset password instructions", class: "btn btn-primary" %>
			</div>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>
</div>