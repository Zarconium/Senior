<div class="col-xs-offset-4 col-xs-4 img-rounded" style="background:#fff;padding:30px;">
	<div class="row">
		<div class="page-header">
			<h1>Change your password</h1>
		</div>

		<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }, defaults: { wrapper_html: { class: 'form-group' }, input_html: { class: 'form-control' } }) do |f| %>
			<%= f.error_notification %>

			<%= f.input :reset_password_token, :as => :hidden %>
			<%= f.full_error :reset_password_token %>

			<div class="form-inputs">
				<%= f.input :password, :label => "New password", :required => true, :autofocus => true %>
				<%= f.input :password_confirmation, :label => "Confirm your new password", :required => true %>
			</div>

			<div class="form-actions">
				<%= f.button :submit, "Change my password" %>
			</div>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>
</div>
