<div class="col-xs-offset-4 col-xs-4 img-rounded" style="background:#fff;padding:30px;">
	<div class="row">
		<div class="page-header">
			<h1>Edit <%= resource_name.to_s.humanize %></h1>
		</div>

		<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { multipart: true, :method => :put }, defaults: { wrapper_html: { class: 'form-group' }, input_html: { class: 'form-control' } }) do |f| %>
			<%= f.error_notification %>

			<div class="form-inputs">
				<%= f.input :email, :required => true, :autofocus => true, error_html: { class: 'text-danger'} %>
				<%= f.input :handle, :required => true, error_html: { class: 'text-danger'} %>

				<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
					<p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
				<% end %>

				<%= f.input :password, :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => false, error_html: { class: 'text-danger'} %>
				<%= f.input :password_confirmation, :required => false, error_html: { class: 'text-danger'} %>
				<%= f.input :current_password, :hint => "we need your current password to confirm your changes", :required => true, error_html: { class: 'text-danger'} %>
			</div>

			<div class="form-actions">
				<%= f.button :submit, "Update", class: "btn btn-primary" %>
			</div>
		<% end %>

		<h3>Cancel my account</h3>

		<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %></p>

		<%= link_to "Back", :back %>
	</div>
</div>