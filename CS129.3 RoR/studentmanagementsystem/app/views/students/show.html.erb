<div class="content">
	<div class="row">
		<div class="col-md-12">
			<h1><%= @student.name %></h1>
			<hr>

			<ul class="nav nav-tabs">
				<li class="active"><a href="#profile" data-toggle="tab">Profile</a></li>
				<li><a href="#subjects" data-toggle="tab">Subjects</a></li>
			</ul>

			<div class="tab-content">
				<div class="tab-pane fade in active" id="profile">
					<table class="table table-bordered table-striped">
						<tr>
							<th>First Name</th>
							<td><%= @student.first_name %></td>
						</tr>
						<tr>
							<th>Last Name</th>
							<td><%= @student.last_name %></td>
						</tr>
						<tr>
							<th>Middle Name</th>
							<td><%= @student.middle_name %></td>
						</tr>
						<tr>
							<th>Date of Birth</th>
							<td><%= @student.date_of_birth %></td>
						</tr>
						<tr>
							<th>Address</th>
							<td><%= @student.address %></td>
						</tr>
						<tr>
							<th>Student Number</th>
							<td><%= @student.student_number %></td>
						</tr>
						<tr>
							<th>Contact Number</th>
							<td><%= @student.contact_number %></td>
						</tr>
						<tr>
							<th>Email</th>
							<td><%= @student.email %></td>
						</tr>
					</table>
					<%= link_to "Edit", edit_student_path(@student.id), class: "btn btn-primary" %>
					<%= link_to "Delete", student_path(@student.id), method: :delete, confirm: "Are you sure?", class: "btn btn-danger" %>
				</div>

				<div class="tab-pane fade" id="subjects">
					<h3>Average Numerical Grade: <%= @student.average %></h3>
					<table class="table table-bordered table-striped">
						<thead>
							<tr>
								<th>Subject Code</th>
								<th>Subject</th>
								<th>Date Enrolled</th>
								<th>Date Completed</th>
								<th>Letter Grade</th>
								<th>Numeric Grade</th>
							</tr>
						</thead>
						<tbody>
							<% @student.student_subjects.each do |s| %>
							<tr>
								<td><%= s.subject.code %></td>
								<td><%= s.subject %></td>
								<td><%= s.date_enrolled %></td>
								<td><%= s.date_completed %></td>
								<td><%= s.letter_grade %></td>
								<td><%= s.numeric_grade %></td>
								<td>
									<%= link_to "Edit", edit_student_subject_record_path(@student.id, s.id) %> | 
									<%= link_to "Delete", student_subject_path(s.id), method: :delete, confirm: "Are you sure?" %>
								</td>
							</tr>
							<% end %>
						</tbody>
					</table>
					<%= link_to "Add Subject", add_student_subject_record_path(@student.id), class: "btn btn-primary" %>
				</div>
			</div>
		</div>
	</div>
</div>