<div class="col-md-4 col-md-offset-4">
<h2>Forgot your password?</h2>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }, defaults: { wrapper_html: { class: 'form-group' }, input_html: { class: 'form-control' } }) do |f| %>
  <%= f.error_notification %>

    <%= f.input :email, :required => true, :autofocus => true %>

    <%= f.button :submit, "Send me reset password instructions", class: 'btn btn-primary' %>
<% end %>

<%= render "devise/shared/links" %>
</div>