<%= simple_form_for(subject, defaults: { wrapper_html: { class: 'form-group' }, input_html: { class: 'form-control' } }) do |f| %>
	<%= f.input :name, error_html: { class: 'text-danger'} %>
	<%= f.input :code, error_html: { class: 'text-danger'} %>
	<%= f.input :num_units, error_html: { class: 'text-danger'} %>
	<hr>
	<%= f.submit "Save", class: 'btn btn-primary' %>
<% end %>