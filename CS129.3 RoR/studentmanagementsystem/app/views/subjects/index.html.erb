<div class="content">
	<h1>Student Management System</h1>
	<hr>
	<h2>All Subjects</h2>
	<table class="table table-hover">
		<thead>
			<tr>
				<th>Name</th>
				<th>Code</th>
				<th>Number of Units</th>
			</tr>
		</thead>
		<tbody>
			<% @subjects.each do |subject| %>
			<tr>
				<td><%= link_to subject.code, subject_path(subject.id) %></td>
				<td><%= link_to subject.name, subject_path(subject.id) %></td>
				<td><%= subject.num_units %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>