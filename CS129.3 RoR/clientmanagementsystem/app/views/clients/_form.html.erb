<%= simple_form_for(client, defaults: { wrapper_html: { class: 'form-group' }, input_html: { class: 'form-control' } }) do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :contact_number %>
  <%= f.input :company_name %>
  <%= f.input :email %>
  <%= f.input :description %>
  <hr>
  <%= f.submit "Save Client" %>
<% end %>
