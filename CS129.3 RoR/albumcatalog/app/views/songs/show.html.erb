<div class="page-header">
	<h1>Song</h1>
</div>
<table class="table table-bordered">
	<tr>
		<th>Album</th>
		<td><%= link_to @song.album, album_path(@song.album.id) %></td>
	</tr>
	<tr>
		<th>Title</th>
		<td><%= @song.song_title %></td>
	</tr>
	<tr>
		<th>Duration</th>
		<td><%= @song.duration %> seconds</td>
	</tr>
	<tr>
		<th>Composer</th>
		<td><%= @song.composer %></td>
	</tr>
</table>
<%= link_to "Edit", edit_song_path(@song.id), class: "btn btn-primary" %>
<%= link_to "Delete", song_path(@song.id), class: "btn btn-danger", method: :delete, confirm: "Delete song?" %>